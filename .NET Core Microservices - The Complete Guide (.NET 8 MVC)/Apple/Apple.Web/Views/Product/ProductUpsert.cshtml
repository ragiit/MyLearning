@model Apple.Web.Models.ProductDto

@{
    ViewData["Title"] = Model.Id != 0 ? "Update Product" : "Create Product";
}

<form method="post" enctype="multipart/form-data">
    <input asp-for="Id" hidden />
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">@(Model.Id != 0 ? "Update" : "Create") Product</h1>
        <hr />
        <div class="row">
            <!-- Form Input -->
            <div class="col-md-8">
                <div class="form-group row mb-3">
                    <label class="col-sm-2 col-form-label" style="font-size:20px;">Name</label>
                    <div class="col-sm-10">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label class="col-sm-2 col-form-label" style="font-size:20px;">Category</label>
                    <div class="col-sm-10">
                        <input asp-for="CategoryName" class="form-control" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label class="col-sm-2 col-form-label" style="font-size:20px;">Description</label>
                    <div class="col-sm-10">
                        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label class="col-sm-2 col-form-label" style="font-size:20px;">Image</label>
                    <div class="col-sm-10">
                        <input asp-for="Image" type="file" class="form-control" />
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-4">
                    <label class="col-sm-2 col-form-label" style="font-size:20px;">Price</label>
                    <div class="col-sm-10">
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6 offset-sm-1 mb-2">
                        <a asp-action="ProductIndex" class="btn btn-primary form-control">Back to List</a>
                    </div>
                    <div class="col-sm-5 mb-2">
                        <input type="submit" value="@(Model.Id != 0 ? "Update" : "Create")" class="btn btn-success form-control" />
                    </div>
                </div>
            </div>

            <!-- Preview Gambar -->
            <div class="col-md-4 text-center">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="img-thumbnail rounded mt-3" style="max-width: 300px;" alt="Product Image" />
                }
            </div>
        </div>

        @* <div class="row mt-3">
            <div class="col-md-12 text-center">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="img-thumbnail rounded" style="max-width: 300px;" alt="Product Image" />
                }
            </div>
        </div> *@

    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
