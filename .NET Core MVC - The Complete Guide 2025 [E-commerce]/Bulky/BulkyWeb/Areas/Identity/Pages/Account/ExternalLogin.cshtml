@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Selesaikan Pendaftaran";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-7">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4 p-md-5">

                    <div class="text-center mb-4">
                        <h2 class="fw-bolder fs-3">Langkah Terakhir...</h2>
                        <hr />
                        <p class="text-info">
                            Anda telah berhasil diautentikasi dengan <strong>@Model.ProviderDisplayName</strong>.
                            Silakan lengkapi detail di bawah ini untuk menyelesaikan pembuatan akun Anda.
                        </p>
                    </div>

                    <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Name" class="form-label"></label>
                                <input asp-for="Input.Name" class="form-control" placeholder="Nama Lengkap Anda" />
                                <span asp-validation-for="Input.Name" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Email" class="form-label"></label>
                                @* Email biasanya sudah terisi dan sebaiknya tidak diubah *@
                                <input asp-for="Input.Email" class="form-control" autocomplete="email" placeholder="nama@email.com" readonly />
                                <span asp-validation-for="Input.Email" class="text-danger small"></span>
                            </div>
                        </div>

                        <p class="text-muted small mt-3">Informasi Pengiriman (Bisa diisi nanti)</p>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="0812..." />
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.StreetAddress" class="form-label"></label>
                                <input asp-for="Input.StreetAddress" class="form-control" placeholder="Jl. Sudirman No. 1" />
                                <span asp-validation-for="Input.StreetAddress" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Input.City" class="form-label"></label>
                                <input asp-for="Input.City" class="form-control" placeholder="Jakarta" />
                                <span asp-validation-for="Input.City" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Input.State" class="form-label"></label>
                                <input asp-for="Input.State" class="form-control" placeholder="DKI Jakarta" />
                                <span asp-validation-for="Input.State" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Input.PostalCode" class="form-label"></label>
                                <input asp-for="Input.PostalCode" class="form-control" placeholder="10110" />
                                <span asp-validation-for="Input.PostalCode" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-grid mt-3">
                            <button type="submit" class="btn btn-primary btn-lg fw-bold">
                                <i class="bi bi-check-circle-fill me-2"></i>Selesaikan Pendaftaran
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}