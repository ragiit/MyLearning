@{
    // Logika untuk menentukan layout utama (dari _Layout.cshtml root) tetap dipertahankan.
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

@* Container utama dengan margin atas dan bawah untuk memberikan ruang napas *@
<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-2 fw-bolder">Kelola Akun Anda</h2>
            <p class="text-muted">Ubah pengaturan profil, email, atau password Anda di sini.</p>
            <hr class="mb-4" />
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            @* Bagian ini akan menampilkan menu navigasi samping (Profil, Email, Password, dll.) *@
            <partial name="_ManageNav" />
        </div>
        <div class="col-md-9">
            @* KONTEN UTAMA DIBUNGKUS DALAM CARD
                Semua halaman (seperti Index.cshtml, Email.cshtml) yang dirender oleh @RenderBody()
                sekarang akan secara otomatis tampil di dalam kartu ini.
            *@
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body p-4">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await RenderSectionAsync("Scripts", required: false)
}