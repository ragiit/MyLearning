@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Ubah Password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h4 class="mb-3">@ViewData["Title"]</h4>
<partial name="_StatusMessage" for="StatusMessage" />

<form id="change-password-form" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

    <div class="mb-3">
        <label asp-for="Input.OldPassword" class="form-label"></label>
        <div class="input-group">
            <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
            <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Masukkan password lama Anda" />
        </div>
        <span asp-validation-for="Input.OldPassword" class="text-danger small mt-1"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.NewPassword" class="form-label"></label>
        <div class="input-group">
            <span class="input-group-text"><i class="bi bi-key-fill"></i></span>
            <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Masukkan password baru Anda" />
        </div>
        <span asp-validation-for="Input.NewPassword" class="text-danger small mt-1"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.ConfirmPassword" class="form-label"></label>
        <div class="input-group">
            <span class="input-group-text"><i class="bi bi-key-fill"></i></span>
            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Konfirmasi password baru Anda" />
        </div>
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small mt-1"></span>
    </div>

    <button type="submit" class="btn btn-primary fw-semibold mt-3">
        <i class="bi bi-shield-lock-fill me-2"></i>Perbarui Password
    </button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}