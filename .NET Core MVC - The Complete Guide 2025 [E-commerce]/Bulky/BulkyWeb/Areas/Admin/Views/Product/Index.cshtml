@* DIUBAH: Model sudah benar, yaitu List<Product> *@
@model List<Bulky.Models.Models.Product>
@{
    // DIUBAH: Judul halaman disesuaikan menjadi "Daftar Produk"
    ViewData["Title"] = "Daftar Produk";
}

<div class="container mt-4 mb-5">
    <partial name="_Notification" />

    <div class="card shadow border-0">
        <div class="card-header bg-light py-3">
            <div class="row align-items-center">
                <div class="col-12 col-md-6">
                    <h2 class="mb-0 text-primary">
                        @* DIUBAH: Ikon dan teks judul disesuaikan untuk Produk *@
                        <i class="bi bi-box-seam-fill me-2"></i>Daftar Produk
                    </h2>
                </div>
                <div class="col-12 col-md-6 text-md-end mt-2 mt-md-0">
                    @* Tautan ini sudah benar mengarah ke Product Controller *@
                    <a asp-area="Admin" asp-controller="Product" asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle-fill me-2"></i> Buat Produk Baru
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body p-0 p-md-3">
            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-info text-center m-3">
                    @* DIUBAH: Pesan disesuaikan untuk produk *@
                    Belum ada produk yang tersedia. Silakan <a asp-controller="Product" asp-action="Create" class="alert-link">buat produk baru</a>.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                @* DIUBAH: Kolom tabel disesuaikan dengan properti Model Product *@
                                <th scope="col">Judul Produk</th>
                                <th scope="col">ISBN</th>
                                <th scope="col">Penulis</th>
                                <th scope="col" class="text-end">Harga</th>
                                <th scope="col" style="width: 15%;" class="text-center">Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                <tr>
                                    @* DIUBAH: Data sel disesuaikan dengan properti product *@
                                    <td class="fw-semibold">@product.Title</td>
                                    <td>@product.ISBN</td>
                                    <td>@product.Author</td>
                                    <td class="text-end">@product.ListPrice.ToString("c", new System.Globalization.CultureInfo("id-ID"))</td>
                                    <td>
                                        <div class="d-flex justify-content-center gap-2">
                                            @* Tautan Edit dan Delete sudah benar menggunakan product.Id *@
                                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-outline-primary" title="Edit">
                                                <i class="bi bi-pencil-square"></i>
                                                <span class="d-none d-md-inline ms-1">Edit</span>
                                            </a>
                                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-sm btn-outline-danger" title="Hapus">
                                                <i class="bi bi-trash-fill"></i>
                                                <span class="d-none d-md-inline ms-1">Hapus</span>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
        @if (Model != null && Model.Any())
        {
            <div class="card-footer bg-light text-muted small py-2">
                @* DIUBAH: Teks footer disesuaikan untuk produk *@
                Menampilkan @Model.Count() produk.
            </div>
        }
    </div>
</div>