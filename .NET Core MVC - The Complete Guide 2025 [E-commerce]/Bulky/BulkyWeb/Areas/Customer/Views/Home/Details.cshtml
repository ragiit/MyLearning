@* Modelnya sekarang langsung ke Product, bukan ShoppingCart *@
@model Product

@{
    ViewData["Title"] = "Detail Produk: " + Model.Title;
}

<div class="container mt-5 mb-5">
    <div class="card shadow border-0 p-4">
        <div class="row">
            <div class="col-md-5 text-center mb-4 mb-md-0">
                @* Gambar Produk *@
                <img src="@(string.IsNullOrWhiteSpace(Model.ImageUrl) ? "https://placehold.co/400x400?text=NotFound" : Model.ImageUrl)" class="img-fluid rounded-3 shadow" style="max-height: 400px;" alt="@Model.Title" />
            </div>
            <div class="col-md-7">
                <div class="p-3">
                    @* Kategori *@
                    <span class="badge bg-primary bg-gradient p-2 mb-3 fs-6">@Model.Category.Name</span>

                    @* Judul *@
                    <h1 class="display-5 fw-bolder">@Model.Title</h1>
                    <p class="text-muted fs-5 mb-4">oleh @Model.Author</p>

                    @* Deskripsi *@
                    <div class="text-secondary my-4">
                        @* Gunakan Html.Raw agar format dari TinyMCE (seperti bold, italic) bisa tampil *@
                        @Html.Raw(Model.Description)
                    </div>

                    @* Harga *@
                    <div class="row my-4 align-items-center">
                        <div class="col-6">
                            <span class="text-muted text-decoration-line-through fs-5">
                                Harga Normal: @Model.ListPrice.ToString("c", new System.Globalization.CultureInfo("id-ID"))
                            </span>
                        </div>
                        <div class="col-6">
                            <span class="text-primary fw-bold fs-3">
                                Harga Spesial: @Model.Price.ToString("c", new System.Globalization.CultureInfo("id-ID"))
                            </span>
                        </div>
                    </div>

                    @* Jumlah dan Tombol Aksi *@
                    <div class="d-flex align-items-center gap-3 mt-4">
                        <div class="form-group">
                            <label class="form-label fs-5 me-2">Jumlah:</label>
                            <input type="number" class="form-control" value="1" style="width: 80px;" />
                        </div>

                        @* TOMBOL DUMMY: Tombol ini belum berfungsi, hanya tampilan *@
                        <div class="flex-grow-1">
                            <a href="#" class="btn btn-primary btn-lg w-100 disabled" title="Fungsi segera hadir!">
                                <i class="bi bi-cart-plus-fill me-2"></i> Tambah ke Keranjang
                            </a>
                        </div>
                    </div>

                    <a asp-action="Index" class="btn btn-outline-secondary mt-4">
                        <i class="bi bi-arrow-left-circle me-2"></i> Kembali ke Katalog
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>