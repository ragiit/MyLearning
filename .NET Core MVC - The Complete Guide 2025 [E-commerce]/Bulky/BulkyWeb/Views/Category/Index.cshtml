@{
    ViewData["Title"] = "Category";
}

<div class="container mt-4">
    <div class="row mt-3 mb-4">
        <div class="col-md">
            <h1 class="text-dark">Categories</h1>
        </div>
        <div class="col-md text-md-end">
            <a asp-area="" asp-controller="Category" asp-action="Create" class="btn btn-dark">
                <i class="bi bi-plus"></i> Create New
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Display Order</th>
                <th>Actions</th> <!-- Tambahan kolom untuk tombol -->
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>@category.DisplayOrder</td> 
                    <td>
                        <div class="d-flex justify-content-center">
                            <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary mx-1">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger mx-1">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </td> 
                </tr>
            }
        </tbody>
    </table>
</div>
