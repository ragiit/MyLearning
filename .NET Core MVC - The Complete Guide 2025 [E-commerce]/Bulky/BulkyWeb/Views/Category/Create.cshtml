@model Category
@{
	ViewData["Title"] = "Buat Kategori Baru"; // Menggunakan bahasa Indonesia untuk konsistensi jika diinginkan
}

<div class="container mt-5">
	<div class="row justify-content-center">
		<div class="col-md-8 col-lg-6">
			<div class="card shadow border-0">
				<div class="card-header bg-primary text-white text-center py-3">
					<h2 class="mb-0">Buat Kategori Baru</h2>
				</div>
				<div class="card-body p-4">
					<form method="post" asp-action="Create">
						@* Menambahkan asp-action="Create" untuk kejelasan *@
						<div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>
						@* Menampilkan ringkasan validasi di bagian atas untuk visibilitas yang lebih baik *@

						<div class="mb-3">
							<label asp-for="Name" class="form-label fw-semibold">Nama Kategori</label>
							@* Menambahkan class fw-semibold untuk sedikit penekanan pada label *@
							<input asp-for="Name" class="form-control form-control-lg" placeholder="Masukkan nama kategori" />
							@* Menggunakan form-control-lg untuk input yang lebih besar dan mudah disentuh *@
							<span asp-validation-for="Name" class="text-danger small mt-1"></span>
							@* Menggunakan kelas 'small' dan 'mt-1' untuk pesan error yang lebih rapi *@
						</div>

						<div class="mb-4">
							@* Menambah margin bottom sedikit lebih banyak sebelum grup tombol *@
							<label asp-for="DisplayOrder" class="form-label fw-semibold">Urutan Tampilan</label>
							<input asp-for="DisplayOrder" type="number" class="form-control form-control-lg" placeholder="Masukkan urutan tampilan" />
							@* Menambahkan type="number" untuk input yang lebih sesuai *@
							<span asp-validation-for="DisplayOrder" class="text-danger small mt-1"></span>
						</div>

						<div class="d-grid gap-2 d-md-flex justify-content-md-end">
							@* Menggunakan d-grid dan d-md-flex untuk layout tombol yang lebih responsif dan modern *@
							<a asp-area="" asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary px-4">
								<i class="bi bi-arrow-left-circle me-2"></i>Kembali
								@* Menambahkan ikon dan sedikit padding horizontal *@
							</a>
							<button type="submit" class="btn btn-primary px-4">
								<i class="bi bi-plus-circle me-2"></i>Buat
								@* Menambahkan ikon dan sedikit padding horizontal *@
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}