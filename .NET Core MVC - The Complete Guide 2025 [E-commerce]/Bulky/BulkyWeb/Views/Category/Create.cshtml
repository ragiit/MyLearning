@{
    ViewData["Title"] = "Create Category";
}

<div class="container mt-3 ">
    <form method="post">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2>Create Category</h2>
                <hr />
            </div>
            <div class="mb-3 row">
                <label class="p-0">Category Name</label>
                <input type="text" class="form-control" />
            </div>
            <div class="mb-3 row">
                <label class="p-0">Display Order</label>
                <input type="text" class="form-control" />
            </div>
            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-dark form-control">Create</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-area="" asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control">Back</a>
                </div>
            </div>
        </div>
    </form>
</div>