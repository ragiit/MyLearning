{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "RedisConnection": "distributedcache:6379"
  },
  "ApiSettings": {
    "JwtOptions": {
      "Secret": "INI ADALAH KUNCI RAHASIA YANG SANGAT PANJANG DAN HARUS DIUBAH",
      "Issuer": "apple-auth-api",
      "Audience": "apple-client"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "authRoute": {
        "ClusterId": "authCluster",
        "Match": {
          "Path": "/api/auth/{**remainder}"
        }
      },
      "menuRoute": {
        "ClusterId": "menuCluster",
        "Match": {
          "Path": "/api/menus/{**remainder}"
        },
        "AuthorizationPolicy": "JwtPolicy"
      },
      "basketRoute": {
        "ClusterId": "basketCluster",
        "Match": {
          "Path": "/api/basket/{**remainder}"
        },
        "AuthorizationPolicy": "JwtPolicy"
      }
    },
    "Clusters": {
      "authCluster": {
        "Destinations": {
          "authDestination": {
            "Address": "http://auth.api:8080"
          }
        }
      },
      "menuCluster": {
        "Destinations": {
          "menuDestination": {
            "Address": "http://menu.api:8080"
          }
        }
      },
      "basketCluster": {
        "Destinations": {
          "basketDestination": {
            "Address": "http://basket.api:8080"
          }
        }
      }
    }
  }
}